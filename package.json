{
    "name": "@omnifyjp/omnify-laravel-boilerplate",
    "version": "1.0.0",
    "description": "Full-stack boilerplate with Laravel API + Next.js frontend, powered by Omnify schema-driven development",
    "keywords": [
        "laravel",
        "nextjs",
        "typescript",
        "docker",
        "omnify",
        "boilerplate",
        "fullstack"
    ],
    "author": "FamGia",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/omnifyjp/omnify-laravel-boilerplate"
    },
    "private": true,
    "type": "module",
    "pnpm": {
        "onlyBuiltDependencies": [
            "@famgia/omnify",
            "@famgia/omnify-laravel",
            "@famgia/omnify-typescript"
        ]
    },
    "scripts": {
        "setup": "node -e \"require('child_process').execSync(process.platform==='win32'?'powershell -ExecutionPolicy Bypass -File docker/scripts/setup.ps1':'bash docker/scripts/setup.sh',{stdio:'inherit'})\"",
        "dev": "node -e \"require('child_process').execSync(process.platform==='win32'?'powershell -ExecutionPolicy Bypass -File docker/scripts/dev.ps1':'bash docker/scripts/dev.sh',{stdio:'inherit'})\""
    },
    "devDependencies": {
        "@famgia/omnify": "latest",
        "@famgia/omnify-cli": "^0.0.165",
        "@famgia/omnify-japan": "^0.0.150",
        "@famgia/omnify-laravel": "latest",
        "@famgia/omnify-typescript": "^0.0.146",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^25.0.6",
        "typescript": "^5.9.3",
        "yaml": "^2.8.2"
    }
}
